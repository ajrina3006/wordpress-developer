pipeline {
    agent any

    stages {

        stage('Pull Latest Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ajrina3006/wordpress-developer.git'
            }
        }

        stage('Sync to Production WordPress') {
            steps {
                sh """
                rsync -av --delete wp-content/ /var/www/html/wp-content/
                """
            }
        }

        stage('Reload Apache') {
            steps {
                sh "systemctl reload apache2 || true"
            }
        }
    }
}
